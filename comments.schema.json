                    },
                    "id": {
                        "$id": "#/items/anyOf/0/properties/id",
                        "type": "integer"
                    },
                    "name": {
                        "$id": "#/items/anyOf/0/properties/name",
                        "type": "string"
                    },
                    "email": {
                        "$id": "#/items/anyOf/0/properties/email",
                        "type": "string"
                    },
                    "body": {
                        "$id": "#/items/anyOf/0/properties/body",
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        ]
